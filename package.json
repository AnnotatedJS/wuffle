{
  "name": "wuffle",
  "description": "A task board for GitHub issues",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "all": "run-s lint test build",
    "lint": "eslint .",
    "dev:board": "cd packages/board && npm run dev",
    "dev": "run-p dev:* -l",
    "build:board": "cd packages/board && npm run build",
    "build": "run-s build:*",
    "test:board": "cd packages/board && npm test",
    "test": "run-s test:*",
    "start:board": "cd packages/board && npm run start",
    "start": "run-p start:* -l",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-bpmn-io": "^0.7.0",
    "eslint-plugin-import": "^2.17.2",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5"
  }
}
